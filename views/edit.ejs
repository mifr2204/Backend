                    <label for="name">Kursnamn:</label><br>
                    <input type="text" id="name" name="name" value="<%= row.name %>"><br>

                    <label for="code">Kurskod:</label><br>
                    <input type="text" id="code" name="code" value="<%= row.code %>"><br>

                    <label for="progression">Progression:</label><br>
                    <input type="text" id="progression" name="progression" value="<%= row.progression %>"><br>

                    <label for="name">Syllabus:</label><br>
                    <input type="url" id="syllabus" name="syllabus" value="<%= row.syllabus %>"><br>
                    
                    <input type="submit" class="addbtn" value="Ändra kurs">
            
                </form>

            </main>
        </div>
